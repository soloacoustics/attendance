<h2>新規登録</h2>
 
<%= form_for @attendance, url: attendances_path do |f| %>
  <div>
    <%= f.label :date, '日付' %>
    <%= f.text_field :date %>
  </div>
  <div>
    <%= f.label :work_from, '出勤時間' %>
    <%= f.text_field :work_from %>
  </div>
  <div>
    <%= f.label :work_to, '退勤時間' %>
    <%= f.text_field :work_to %>
  </div>
  <div>
    <%= f.label :break_from, '休憩開始時間' %>
    <%= f.text_field :break_from %>
  </div>
  <div>
    <%= f.label :break_to, '休憩終了時間' %>
    <%= f.text_field :break_to %>
  </div>
  <div>
    <%= f.label :description, '作業内容' %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.submit '送信' %>
  </div>
<% end %>

<%= link_to "戻る", attendances_path %>
